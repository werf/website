---
layout: null
search: exclude
---

<?xml version="1.0" encoding="UTF-8"?>

<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">

    {%- assign pages_in_main_lang=site.pages | where: "lang", site.site_lang | where: "sitemap_include", true | where_exp: "page", "page.layout != 'wip'" | where_exp: "page", "page.layout != 'development'" | where_exp: "page", "page.layout != 'task'" %}
    {%- for page in pages_in_main_lang %}
    <url>
        <loc>{{ page.url | absolute_url }}</loc>
        {%- if page.multilang %}
        <xhtml:link rel="alternate" hreflang="ru" href="{{ site.site_urls.ru }}{{ page.url | relative_url }}" />
        <xhtml:link rel="alternate" hreflang="en" href="{{ site.site_urls.en }}{{ page.url | relative_url }}" />
        {%- endif %}
        <lastmod>{{site.time | date: '%Y-%m-%d' }}</lastmod>
        <changefreq>daily</changefreq>
        <priority>0.5</priority>
    </url>
    {%- endfor %}
</urlset>
